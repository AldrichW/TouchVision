<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@android:color/holo_blue_light">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nfc_tag"
        android:id="@+id/nfc_tag_text"
        android:textSize="18sp"
        android:fontFamily="helvetica"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/product_id_text"
        android:layout_centerVertical="true"
        android:textSize="24sp"
        android:fontFamily="helvetica"
        android:textColor="@android:color/white"
        android:layout_below="@id/nfc_tag_text"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/product_info"
        android:id="@+id/product_info_text"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:fontFamily="helvetica"
        android:textColor="@android:color/white"
        android:layout_below="@id/product_id_text"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tag_message_text"
        android:layout_centerVertical="true"
        android:textSize="24sp"
        android:fontFamily="helvetica"
        android:textColor="@android:color/white"
        android:layout_below="@id/product_info_text"
       />

    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="@string/product_info"
        android:id="@+id/product_button"
        android:layout_above="@+id/nutrition_button"
        android:textSize="36sp"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="@string/nutrition_info"
        android:id="@+id/nutrition_button"
        android:layout_marginBottom="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="36sp"/>


</RelativeLayout>
